<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonCalender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
        android:text="Calender" />

    <Button
        android:id="@+id/buttonNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonCalender"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_notes_24"
        android:text="Notes" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNotes"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_baseline_settings_24"
        android:text="Settings" />
</RelativeLayout>